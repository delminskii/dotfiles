conky.config = {
	background = true,
	use_xft = true,
	font = 'Ubuntu:pixelsize=10',
	xftalpha = 0.5,
	update_interval = 1,
	total_run_times = 0,
	own_window = true,
	own_window_type = 'normal',
	own_window_transparent = true,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	double_buffer = true,
	minimum_width = 260, minimum_height = 5,
	maximum_width = 260,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,
	default_color = 'grey',
	default_shade_color = 'red',
	default_outline_color = 'green',
	alignment = 'top_right',
	gap_x = 0,
	gap_y = 0,
	no_buffers = true,
	uppercase = false,
	cpu_avg_samples = 2,
	override_utf8_locale = false,

        -- title color
        color0 = '55aaff',

};

conky.text = [[
System Info ${hr 2 }
${color0}Uptime:$color $uptime_short

$alignc Intel i5-2500k @ $color${freq_g} GHz
${exec sensors | grep 'Core 0' | cut -c17-21}C ${cpubar cpu1 7, 202} ${cpu cpu1}%
${exec sensors | grep 'Core 1' | cut -c17-21}C ${cpubar cpu2 7, 202} ${cpu cpu2}%
${exec sensors | grep 'Core 2' | cut -c17-21}C ${cpubar cpu3 7, 202} ${cpu cpu3}%
${exec sensors | grep 'Core 3' | cut -c17-21}C ${cpubar cpu4 7, 202} ${cpu cpu4}%

${color0}CPU utilisation$color$alignr ${cpu cpu0}%
${cpubar cpu0}
${cpugraph 000000 55aaff}
Memory ${hr 2}

${color0}MEM$color $alignc $mem / $memmax $alignr $memperc%
$membar
# ${color0}SWAP$color $alignc $swap / $swapmax $alignr $swapperc%
# $swapbar

${if_match  "$swap"!="0B  " }
  ${exec notify-send "Warning: Swapping"}
$endif

File System ${hr 2}

${color0}/$color $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}

${color0}/home$color $alignc ${fs_used /home} / ${fs_size /home} $alignr ${fs_used_perc /home}%
${fs_bar /home}

${color0}/boot$color $alignc ${fs_used /boot} / ${fs_size /boot} $alignr ${fs_used_perc /boot}%
${fs_bar /boot}

Top Processes ${hr 2}

${color0}NAME$alignr PID   CPU  MEM$color
${top name 1} $alignr ${top pid 1} ${top cpu 1} ${top mem 1}
${top name 2} $alignr ${top pid 2} ${top cpu 2} ${top mem 2}
${top name 3} $alignr ${top pid 3} ${top cpu 3} ${top mem 3}
${top name 4} $alignr ${top pid 4} ${top cpu 4} ${top mem 4}
${top name 5} $alignr ${top pid 5} ${top cpu 5} ${top mem 5}

Network enp3s0 ${hr 2}

${color0}UP:$color$alignc${upspeed enp3s0} (${totalup enp3s0})
${color0}DOWN:$color$alignc${downspeed enp3s0} (${totaldown enp3s0})
]];
